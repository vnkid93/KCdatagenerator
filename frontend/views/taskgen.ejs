<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Tasks generator</h1>
        </div>
        <!-- /.col-lg-12 -->

    </div>
    <!-- /.row -->
    <div class="row">


      <form method="get">

        <div class="row">
          <div class="col-lg-4 col-md-6 form-tab">
            <!-- ******************* GENERAL SETTINGS ********************* -->
            <fieldset>
              <legend>General</legend>

              <div class="form-group">
                <label for="taskCount">Task count</label>
                <input name="count" type="number" class="form-control" id="taskCount" placeholder="Event count" value="100">
              </div>

              <div class="row">
                <div class="col-xs-5">
                  <div class="checkbox">
                    <label>
                      <input type="checkbox" name="czchar" <%= (query.submit) ? (query.czchar == 'on') ? 'checked' : '' : 'checked' %>> Czech symbols
                    </label>
                  </div>
                </div>
                <div class="col-xs-5">
                  <div class="checkbox">
                    <label>
                      <input type="checkbox" name="sub" checked="true" disabled> Random subject
                    </label>
                  </div>
                </div>
              </div>

              <div class="form-group">
                <label for="taskcompletedSlider">Completed</label><br/>
                <input name="completeSl" id="taskcompletedSlider" data-slider-id='exSlider' type="text" data-slider-min="0" data-slider-max="100" data-slider-step="1" data-slider-value="20"/>
                <span class="slider-value"><span id="taskcompletedSliderValue">3</span>% probability</span>
              </div>
            </fieldset>
          </div>  <!-- end column -->

          <div class="col-lg-4 col-md-6 form-tab">
            <fieldset>
              <legend>Date &amp; Reminder</legend>

              <div class="form-group">
                <label for="startTaskDate">Starting date</label>
                <div class='input-group date'>
                  <input name="sdate" type='text' class="form-control" id="startTaskDate"/>
                  <span class="input-group-addon">
                    <span class="glyphicon glyphicon-calendar"></span>
                  </span>
                </div>
              </div>

              <div class="form-group">
                <label for="endTaskDate">Ending date</label>
                <div class='input-group date'>
                  <input name="edate" type='text' class="form-control" id="endTaskDate"/>
                  <span class="input-group-addon">
                    <span class="glyphicon glyphicon-calendar"></span>
                  </span>
                </div>
              </div>

              <div class="form-group">
                <label for="reminderSlider">Reminder</label><br/>
                <input name="reminderSl" id="reminderSlider" data-slider-id='exSlider' type="text" data-slider-min="0" data-slider-max="100" data-slider-step="1" data-slider-value="20"/>
                <span class="slider-value"><span id="reminderSliderValue">3</span>% probability</span>
              </div>
          </fieldset>
          </div> <!-- end column -->

          <div class="col-lg-4 col-md-6 form-tab">
            <fieldset>
              <legend>Description</legend>

              <div class="form-group">
                <label for="noteDescSlider">Description size</label><br/>
                <input name="descSl" id="noteDescSlider" data-slider-id='exSlider' type="text" data-slider-min="0" data-slider-max="3" data-slider-step="1" data-slider-value="1"/>
                <span class="slider-value"><span id="noteDescSliderValue">1</span> paragraphs</span>
              </div>

              <div class="row">
                <div class="col-xs-5">
                  <div class="checkbox">
                    <label>
                      <input type="checkbox" name="htmlc" <%= (query.submit) ? (query.htmlc == 'on') ? 'checked' : '' : 'checked' %>> Contains html code
                    </label>
                  </div>
                </div>
                <div class="col-xs-5">
                  <div class="checkbox">
                    <label>
                      <input type="checkbox" name="links" <%= (query.submit) ? (query.links == 'on') ? 'checked' : '' : 'checked' %>> Contains links
                    </label>
                  </div>
                </div>
              </div>


            </fieldset>
          </div> <!-- end column -->


        </div>
        <%
          if(params.error != undefined){
        %>
          <div class="error_code">
            <u>Error</u>: <%= params.error %>
          </div>
        <% }else if(params.success != undefined){ %>
          <div class="success_code">
            <%= params.success %>
          </div>
        <% } %>
        <hr>
        <button name="reset" type="submit" class="btn btn-danger" id="btn-resetchanges">Reset changes</button>
        <button name="submit" type="submit" class="btn btn-primary" id="btn-submit">Generate Tasks</button>
      </form>

    </div>
</div>
<div class="tab-legends">
  * <strong>Random subject</strong> has to be enabled<br/>
  * <strong>Reminder</strong> is ramdomly set<br/>
  * Due date is ramdomly set between <strong>Starting date</strong> and <strong>Ending date</strong><br/>
  * <strong>Random checkboxes</strong> - If checkbox is enabled, that property will be filled with radom values
</div>
<!-- /.container-fluid -->
