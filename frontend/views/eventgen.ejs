<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Events generator</h1>
        </div>
        <!-- /.col-lg-12 -->

    </div>
    <!-- /.row -->
    <div class="row">


      <form>
        <div class="row">
          <div class="col-lg-4 col-md-6 form-tab">
            <!-- ******************* GENERAL SETTINGS ********************* -->
            <fieldset>
              <legend>General</legend>

              <div class="form-group">
                <label for="eventCount">Event Count</label>
                <input name="count" type="number" class="form-control" id="eventCount" placeholder="Event count" value="10">
              </div>

              <div class="row">
                <div class="col-xs-5">
                  <div class="checkbox">
                    <label>
                      <input type="checkbox" name="czchar" <%= (query.submit) ? (query.czchar == 'on') ? 'checked' : '' : 'checked' %>> Czech symbols
                    </label>
                  </div>
                </div>
              </div>

              <div class="row">
                <div class="col-xs-5">
                  <div class="checkbox">
                    <label>
                      <input type="checkbox" name="sub" <%= (query.submit) ? (query.sub == 'on') ? 'checked' : '' : 'checked' %>> Random subject
                    </label>
                  </div>
                </div>
                <div class="col-xs-5">
                  <div class="checkbox">
                    <label>
                      <input type="checkbox" id="eventLocation" name="loc" <%= (query.submit) ? (query.loc == 'on') ? 'checked' : '' : 'checked' %>> Random location
                    </label>
                  </div>
                </div>
              </div>
              <div class="form-group">
                <label for="resourceSlider">Fill location resouce (if exist)</label><br/>
                <input name="resource" id="resourceSlider" data-slider-id='exSlider' type="text" data-slider-min="0" data-slider-max="100" data-slider-step="1" data-slider-value="5"/>
                <span class="slider-value"><span id="resourceSliderValue">5</span>% probability</span>
              </div>
              <div class="form-group">
                <label for="flagSlider">Private</label><br/>
                <input name="private" id="flagSlider" data-slider-id='exSlider' type="text" data-slider-min="0" data-slider-max="100" data-slider-step="2" data-slider-value="6"/>
                <span class="slider-value"><span id="flagSliderValue">4</span>% probability</span>
              </div>
              <div class="row">
                <div class="col-xs-5">
                  <div class="checkbox">
                    <label>
                      <input type="checkbox" name="lab" <%= (query.submit) ? (query.lab == 'on') ? 'checked' : '' : 'checked' %>> Random label
                    </label>
                  </div>
                </div>
                <div class="col-xs-5">
                  <div class="checkbox">
                    <label>
                      <input type="checkbox" name="show" <%= (query.submit) ? (query.show == 'on') ? 'checked' : '' : 'checked' %>> Random 'Show as'
                    </label>
                  </div>
                </div>
              </div>

            </fieldset>
          </div>  <!-- end column -->

          <div class="col-lg-4 col-md-6 form-tab">
            <fieldset>
              <legend>Times &amp; recurrence</legend>
              <div class="form-group">
                <label for="startdatepicker">Starting date</label>
                <div class='input-group date'>
                  <input name="sdate" type='text' class="form-control" id="datepickerStart"/>
                  <span class="input-group-addon">
                    <span class="glyphicon glyphicon-calendar"></span>
                  </span>
                </div>
              </div>

              <div class="form-group">
                <label for="todatepicker">Ending date</label>
                <div class='input-group date'>
                  <input name="edate" type='text' class="form-control" id="datepickerEnd"/>
                  <span class="input-group-addon">
                    <span class="glyphicon glyphicon-calendar"></span>
                  </span>
                </div>
              </div>
              <div class="form-group">
                <label for="alldaySlider">All days</label><br/>
                <input name="alld" id="alldaySlider" data-slider-id='exSlider' type="text" data-slider-min="0" data-slider-max="100" data-slider-step="1" data-slider-value="10"/>
                <span class="slider-value"><span id="alldaySliderValue">0</span>% probability</span>
              </div>
              <div class="form-group">
                <label for="pastEventSlider">Past events</label><br/>
                <input name="past" id="pastEventSlider" data-slider-id='exSlider' type="text" data-slider-min="0" data-slider-max="100" data-slider-step="1" data-slider-value="10"/>
                <span class="slider-value"><span id="pastEventSliderValue">0</span>% probability</span>
              </div>
              <div class="form-group">
                <label for="recurrenceSlider">Recurrence</label><br/>
                <input name="recc" id="recurrenceSlider" data-slider-id='exSlider' type="text" data-slider-min="0" data-slider-max="100" data-slider-step="1" data-slider-value="2"/>
                <span class="slider-value"><span id="recurrenceSliderValue">0</span>% probability</span>
              </div>
              <div class="row">
                <div class="col-xs-5">
                  <div class="checkbox">
                    <label>
                      <input type="checkbox" name="remind" <%=(query.remind == "on") ? "checked" : ""%>> Random reminder
                    </label>
                  </div>
                </div>
              </div>

            </fieldset>
          </div> <!-- end column -->


          <div class="col-lg-4 col-md-6 form-tab">
            <fieldset>
              <legend>Attendees &amp; Description</legend>
              <div class="form-group">
                <label for="attendeeSlider">Attendees appearance</label><br/>
                <input name="attenprob" id="attendeeSlider" data-slider-id='exSlider' type="text" data-slider-min="0" data-slider-max="100" data-slider-step="1" data-slider-value="10"/>
                <span class="slider-value"><span id="attendeeSliderValue">3</span>% probability</span>
              </div>
              <div class="form-group">
                <label for="attendees">Attendees</label>
                <input name="attendees" type="text" class="form-control" id="attendees" <%= (query.attendees != undefined) ? "value='"+query.attendees+"'" : '' %> placeholder="person1@email.com; person2@email.com; ...">
              </div>
              <div class="form-group">
                <label for="contentSlider">Description size</label><br/>
                <input name="csize" id="contentSlider" data-slider-id='exSlider' type="text" data-slider-min="0" data-slider-max="5" data-slider-step="1" data-slider-value="3"/>
                <span class="slider-value"><span id="contentSliderValue">3</span> paragraphs</span>
              </div>
              <div class="row">
                <div class="col-xs-5">
                  <div class="checkbox">
                    <label>
                      <input type="checkbox" name="htmlc" <%= (query.submit) ? (query.htmlc == 'on') ? 'checked' : '' : 'checked' %>> Contains Html codes
                    </label>
                  </div>
                </div>
                <div class="col-xs-5">
                  <div class="checkbox">
                    <label>
                      <input type="checkbox" name="links" <%= (query.submit) ? (query.links == 'on') ? 'checked' : '' : 'checked' %>> Contains links
                    </label>
                  </div>
                </div>
              </div>
            </fieldset>
          </div> <!-- end column -->

        </div>
        <%
          if(params.error != undefined){
        %>
          <div class="error_code">
            <u>Error</u>: <%= params.error %>
          </div>
        <% }else if(params.success != undefined){ %>
          <div class="success_code">
            <%= params.success %>
          </div>
        <% } %>
        <hr>
        <button name="reset" type="submit" class="btn btn-danger" id="btn-resetchanges">Reset changes</button>
        <button name="submit" type="submit" class="btn btn-primary" id="btn-submit">Generate Events</button>
      </form>

    </div>
</div>
<div class="tab-legends">
  * <strong>Starting date</strong> and <strong>Ending date</strong> are date ranges for genererating<br/>
  * All <strong>probabilities</strong> are for appearance, how oftent those properties will appear<br/>
  * <strong>Random checkboxes</strong> - If checkbox is enabled, that property will be filled with radom values<br/>
  * To add multiple <strong>attendees</strong>, use separator ';'
</div>
<!-- /.container-fluid -->
