<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Quick start</h1>
        </div>
        <!-- /.col-lg-12 -->

    </div>
    <!-- /.row -->
    <div class="row">


      <form method="post">

        <div class="row">
          <!-- ******************* GENERAL SETTINGS ********************* -->
          <div class="col-lg-4 col-md-6 form-tab">
            <fieldset>
              <legend>Host information</legend>
              <div class="form-group">
                <label for="hostaddress">Host address<span class="required">*</span></label>
                <input name="hostaddr" type="text" class="form-control" id="hostaddress" placeholder="Server ip" value="<%=(query.hostaddr) ? query.hostaddr : ""%>">
              </div>
            </fieldset>
          </div> <!-- end column -->

          <div class="col-lg-4 col-md-6 form-tab">
            <fieldset>
              <legend>Administrator permission</legend>
              <div class="form-group">
                <label for="adminlogin">Username<span class="required">*</span></label>
                <input name="aduser" type="text" class="form-control" id="adminlogin" placeholder="Login" value="<%=(query.aduser) ? query.aduser : ""%>">
              </div>
              <div class="form-group">
                <label for="adminpassword">Password<span class="required">*</span></label>
                <input name="adpass" type="password" class="form-control" id="adminpassword" placeholder="Password" value="<%=(query.adpass) ? query.adpass : ""%>">
              </div>
            </fieldset>

          </div>  <!-- end column -->

          <div class="col-lg-4 col-md-6 form-tab">
            <fieldset>
              <legend>Client permission</legend>
              <div class="form-group">
                <label for="userlogin">Client email<span class="required">*</span></label>
                <input name="clientuser" type="email" class="form-control" id="userlogin" placeholder="email@domain.com" value="<%=(query.clientuser) ? query.clientuser : ""%>"
                        required>
              </div>
              <div class="form-group">
                <label for="userpassword">Password<span class="required">*</span></label>
                <input name="clientpass" type="password" class="form-control" id="userpassword" placeholder="Password" value="<%=(query.clientpass) ? query.clientpass : ""%>">
              </div>
            </fieldset>
          </div> <!-- end column -->


        </div>
        <div class="row loggin_status">
          <%  if(params.isLogged){ %>
            <span class="fa fa-check-circle-o logged"></span> Logged
          <%  }else{ %>
            <span class="fa fa-times-circle-o notlogged"></span> Not logged
          <%  } %>
        </div>
        <%
          if(params.error != undefined){
        %>
          <div class="error_code">
            <u>Error</u>: <%= params.error %>
          </div>
        <% }else if(params.success != undefined){ %>
          <div class="success_code">
            <%= params.success %>
          </div>
        <% } %>
        <hr>
        <button class="btn btn-danger" id="btn-resetchanges">Reset changes</button>
        <button name="submit" type="submit" class="btn btn-primary" id="btn-submit">Save changes</button>
      </form>

    </div>
</div>
<div class="tab-legends">
  * <strong>Host address</strong> can be writen by IP format or by hostname<br/>
  * <strong>Administrator permission</strong> is for login to Kerio Connect Webadmin<br/>
  * <strong>Client permission</strong> is for login to Kerio Connect Client (e.g. Webmail)
</div>
<!-- /.container-fluid -->
